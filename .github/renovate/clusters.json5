{
  $schema: "https://docs.renovatebot.com/renovate-schema.json",
  packageRules: [
    {
      description: "Separate PRs for compute cluster",
      matchFileNames: ["**/clusters/compute/**"],
      additionalBranchPrefix: "compute-",
    },
    {
      description: "Separate PRs for storage cluster",
      matchFileNames: ["**/clusters/storage/**"],
      additionalBranchPrefix: "storage-",
    },
  ],
}
